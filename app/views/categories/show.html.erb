<h1><%=@category.title %></h1>

<div class="card-container">
  <% @category.freelancers.each do |freelancer| %>
  <div class="card-show">
    <%= link_to freelancer_path(freelancer) do %>
    <%= image_tag("#{freelancer.image}", alt: "photo of #{freelancer.name}", class: "card-img-top card-image") %>
    <% end %>
    <h4 class="card-title"> <%=freelancer.name%></h4>
    <p class="card-text card-description"><%=freelancer.description%></p>
    <p class="card-text"><%=number_to_currency(freelancer.price)%>/hr</p>
    <div class="card-show-button">
      <% if freelancer.active? %>
      <%= button_to "Choose Me!", cart_index_path(freelancer_id: freelancer.id), class: "btn btn-primary"%>
      <% else %>
      <p> Freelancer Retired </p>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
