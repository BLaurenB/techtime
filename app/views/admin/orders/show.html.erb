<h1>Order: <%=@order.id%></h1>

<div>Date: <%= @order.created_at %></div>

<div class=""><h2>Purchaser: <%= @order.user.full_name %></h2></div>
<div><p><%= @order.user.company%></p></div>
<div><p><%= @order.user.address1%></p></div>
<div><p><%= @order.user.address2%></p></div>
<div><p><%= @order.user.city%></p></div>
<div><p><%= @order.user.state%></p></div>
<div><p><%= @order.user.zip%></p></div>


<div>Status: <%= @order.status %></div>
<% if @order.status == ("Completed" || "Cancelled") %>
<div>Updated on: <%= @order.updated_at %><%end%></div>

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Quantity
        </th>
        <th>
          Price
        </th>
        <th>
          Subtotal
        </th>
        <th>
          Freelance Details
        </th>
      </tr>
    </thead>
    <tbody>
      <% @order.grouped_freelancers.each do |id, quantity| %>
      <tr>
        <td>
          <%= @freelancers.find(id).name %>
        </td>
        <td>
          <td>
            <%= pluralize(quantity, 'hour') %>

          </td>
          <% @freelancers.find(id).price %>
        </td>
        <td>
          <%= number_to_currency(@order.subtotal(id, quantity)) %>
        </td>
        <td>
          <%= link_to "View Freelancer", freelancer_path(@freelancers.find(id)) %>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>

<div>Total: <%= number_to_currency(@order.total) %></div>
